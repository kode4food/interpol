{
  "name": "interpol",
  "description": "Logicful HTML Templates",
  "author": "Thomas S. Bradford",
  "version": "1.2.7",
  "license": "MIT",
  "homepage": "http://www.interpoljs.io/",
  "main": "index.js",
  "bin": {
    "interpol": "lib/cli.js"
  },
  "keywords": [
    "javascript",
    "html",
    "nodejs",
    "browser",
    "templates"
  ],
  "contributors": [
    {
      "name": "Thom Bradford",
      "email": "thom@kode4food.it"
    }
  ],
  "repository": "git@github.com:kode4food/interpol.git",
  "scripts": {
    "build-parser": "pegjs -o speed lib/compiler/parser.pegjs build/parser.js",
    "bundle-standard": "browserify --ignore './compiler' browserify/standard.js > build/interpol.js && uglifyjs -m --preamble \"`cat doc/preamble.js`\" build/interpol.js -o build/interpol.min.js",
    "bundle-parser": "browserify browserify/compiler.js | uglifyjs -m --preamble \"`cat doc/preamble.js`\" -o build/interpol-parser.min.js",
    "bundle-debug": "browserify --debug browserify/compiler.js > build/interpol-debug.js",
    "build": "mkdir -p build && npm run-script build-parser && npm run-script bundle-standard && npm run-script bundle-parser && npm run-script bundle-debug && npm run-script coverage && npm run-script plato",
    "test": "nodeunit test/index.js",
    "coverage": "istanbul cover -x '**/build/**' node_modules/nodeunit/bin/nodeunit test/index.js",
    "plato": "plato -r -l .jshintrc -d report index.js lib"
  },
  "dependencies": {
    "glob": "~4.0.6",
    "mkdirp": "~0.5.0"
  },
  "devDependencies": {
    "browserify": "~6.2.0",
    "istanbul": "~0.3.2",
    "nodeunit": "~0.9.0",
    "pegjs": "~0.8.0",
    "plato": "~1.2.2",
    "uglify-js": "~2.4.15"
  },
  "browser": {
    "vm": false
  },
  "engines": {
    "node": "*"
  }
}
